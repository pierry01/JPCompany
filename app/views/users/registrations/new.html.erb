<% if @user.errors.any? %>
  <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class='container'>
  <div class='row'>
    <div class='col-md-4 col-md-offset-4'>
      <div class='login-panel panel panel-default'>
        <div class='panel-heading'>
          <h3 class='panel-title'>Cadastre-se</h3>
        </div>

        <div class='panel-body'>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <div class="form-group">
              <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'E-mail...' %>
            </div>
            
            <%= f.fields_for :profile_user do |profile_user| %>
              <div class="form-group">
                <%= profile_user.text_field :first_name, autofocus: true, class: 'form-control', placeholder: 'Nome' %>
              </div>
              
              <div class="form-group">
                <%= profile_user.text_field :second_name, autofocus: true, class: 'form-control', placeholder: 'Sobrenome' %>
              </div>
            <% end %>
          
            <div class="form-group">
              <%= f.password_field :password, class: 'form-control', placeholder: 'Senha...' %>
            </div>
            
            <div class="field">
              <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirme sua senha...' %>
            </div>
            
            <br>
          
            <div class="actions">
              <%= f.submit 'Cadastrar', class: 'btn btn-lg btn-success btn-block' %>
            </div>
          <% end %>
          <br>
        </div>
      </div>
    </div>
  </div>
</div>

<% flash.each do |key, value| %>
  <script>
    $.notify("<%= value %>", 'info')
  </script>
<% end %>
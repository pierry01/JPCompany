<div class='container'>
  <div class='row'>
    <div class='col-md-4 col-md-offset-4'>
      <div class='login-panel panel panel-default'>
        <div class='panel-heading'>
          <h3 class='panel-title'><%= t('labels.forgot_passoword') %></h3>
        </div>
        
        <div class='panel-body'>
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <%= f.hidden_field :reset_password_token %>
          
            <div class='form-group'>
              <%= f.password_field :password, class: 'form-control', placeholder: 'Senha...' %>
            </div>
          
            <div class='form-group'>
              <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirme a senha...' %>
            </div>
          
            <div class="actions">
              <%= f.submit "#{t('buttons.change_password')}", class: 'btn btn-lg btn-success btn-block' %>
            </div>
          <% end %>
          <br>
        </div>
      </div>
    </div>
  </div>
</div>
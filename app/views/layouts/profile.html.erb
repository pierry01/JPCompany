<!DOCTYPE html>
<html>
  <head>
    <title>JPCompany</title>
    
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= stylesheet_link_tag 'site', media: 'all' %>
    <%= stylesheet_link_tag 'site/profile', media: 'all' %>
    
    <%= javascript_include_tag 'application' %>
    <%= javascript_include_tag 'site' %>
    <%= javascript_include_tag 'site/profile' %>
    
    <%= csrf_meta_tags %>
  </head>
  
  <body>
    <%= render partial: 'layouts/site_shared/navigation' %>
    
    <div id="wrapper">
      <div id="sidebar-wrapper">
        <ul class="sidebar-nav">
          <li class="sidebar-brand">
            <a href="#">Start Bootstrap</a>
          </li>
          <li>
            <%= link_to 'Dashboard', site_profile_dashboard_index_path %>
          </li>
          <li>
            <%= link_to 'Meus anúncios', site_profile_ads_path %>
          </li>
          <li>
            <%= link_to 'Novo anúncio', new_site_profile_ad_path %>
          </li>
        </ul>
      </div>
    
      <div id="page-content-wrapper">
        <div class="container-fluid">
          <div class="row">
            <div class="col-lg-12">
              <%= yield %>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <% if notice %>
      <%= javascript_tag "$.notify('#{notice}', 'success')" %>
    <% end %>
  </body>
</html>
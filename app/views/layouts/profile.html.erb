<!DOCTYPE html>
<html>
  <head>
    <title>JPCompany</title>
    
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= stylesheet_link_tag 'site', media: 'all' %>
    <%= stylesheet_link_tag 'site/profile', media: 'all' %>
    
    <%= csrf_meta_tags %>
  </head>
  
  <body>
    <%= render partial: 'layouts/site_shared/navigation' %>
    
    <div id="wrapper">
      <div id="sidebar-wrapper">
        <ul class="sidebar-nav">
          <br>
          <li>
            <%= link_to "#{t('profile_menu.dashboard')}", site_profile_dashboard_index_path %>
          </li>
          <li>
            <%= link_to "#{t('profile_menu.my_ads')}", site_profile_ads_path %>
          </li>
          <li>
            <%= link_to "#{t('profile_menu.new_ad')}", new_site_profile_ad_path %>
          </li>
          <li>
            <%= link_to "#{t('profile_menu.my_data')}", edit_site_profile_my_datum_path(current_user.id) %>
          </li>
        </ul>
      </div>
    
      <div id="page-content-wrapper">
        <div class="container-fluid">
          <div class="row">
            <div class="col-lg-12">
              <%= yield %>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <%= javascript_include_tag 'application' %>
    <%= javascript_include_tag 'site' %>
    <%= javascript_include_tag 'site/profile' %>
    
    <%#= javascript_include_tag 'site/profile/ads' %>
    <%= yield :javascripts %>
    
    <%= render partial: 'layouts/shared/notifications' %>
  </body>
</html>
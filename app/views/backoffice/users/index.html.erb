<h1 class="page-header">Usuários</h1>

<div>
  <div class="panel panel-default">
    <div class="panel-heading">
      Usuários do Sistema...
    </div>
    
    <div class="panel-body">
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th>#</th>
              <th>E-mail</th>
              <th>Ações</th>
            </tr>
          </thead>
          
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.id %></td>
                <td><%= user.email %></td>
                <td style="text-align: right">
                  <%= link_to edit_backoffice_user_path(user), class: 'btn btn-primary btn-circle' do %>
                    <i class="fa fa-edit"></i>
                  <% end %>
                  
                  <%= link_to backoffice_user_path(user), method: :delete, data: { confirm: t('messages.confirm_with', item: user.email ) }, class: 'btn btn-danger btn-circle' do %>
                    <i class="fa fa-trash"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="text-center">
    <%= paginate @users %>
  </div>
</div>
<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header">Categorias</h1>
        
        <div class="panel panel-default">
          <div class="panel-heading">
            Nova Categoria
          </div>
          
          <div class="panel-body">
            <div class="col-lg-6">
              <div class="table-responsive">
                <%= form_for([:backoffice, @category]) do |f| %>
                  <div class="form-group">
                    <%= f.label 'Descrição' %>
                    <%= f.text_field :description, class: 'form-control', placeholder: 'Ex: Animais/Pets' %>
                  </div>
                  
                  <button type="submit" class="btn btn-default">Salvar</button>
                <% end %>
              </div>
            </div>
          </div>
          
        </div>
      </div>
    </div>
  </div>
</div>
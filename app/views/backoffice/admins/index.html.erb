<h1 class="page-header">Administradores</h1>

<div>
  <div class="panel panel-default">
    <div class="panel-heading">
      Administradores do Sistema...
    </div>
    
    <div class="panel-body">
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th>#</th>
              <th>Descrição</th>
              <th style="text-align: right">
                <%= link_to new_backoffice_admin_path, class: 'btn btn-success btn-circle' do %>
                  <i class="fa fa-plus"></i>
                <% end %>
              </th>
            </tr>
          </thead>
          
          <tbody>
            <% @admins.each do |admin| %>
              <tr>
                <td><%= admin.id %></td>
                <td><%= admin.email %></td>
                <td style="text-align: right">
                  <%= link_to edit_backoffice_admin_path(admin), class: 'btn btn-primary btn-circle' do %>
                    <i class="fa fa-edit"></i>
                  <% end %>
                  
                  <% if current_admin.id != admin.id %>
                    <%= link_to backoffice_admin_path(admin), method: :delete, data: { confirm: "Excluir #{admin.email}?" }, class: 'btn btn-danger btn-circle' do %>
                      <i class="fa fa-trash"></i>
                    <% end %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<h1 class="page-header">Anúncios</h1>

<div>
  <div class="panel panel-default">
    <div class="panel-heading">
      Anúncios Cadastrados...
    </div>
    
    <div class="panel-body">
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th>#</th>
              <th>Título</th>
              <th style="text-align: right">
                <%= link_to new_backoffice_ad_path, class: 'btn btn-success btn-circle' do %>
                  <i class="fa fa-plus"></i>
                <% end %>
              </th>
            </tr>
          </thead>
          
          <tbody>
            <% @ads.each do |ad| %>
              <tr>
                <td><%= ad.id %></td>
                <td><%= ad.title %></td>
                <td style="text-align: right">
                  <%= link_to edit_backoffice_ad_path(ad), class: 'btn btn-primary btn-circle' do %>
                    <i class="fa fa-edit"></i>
                  <% end %>
                  
                  <%= link_to backoffice_ad_path(ad),
                    method: :delete, class: 'btn btn-danger btn-circle',
                    data: { confirm: ("Deseja excluir #{ad.title}?") } do %>
                    <i class="fa fa-trash"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="text-center">
    <%= paginate @ads %>
  </div>
</div>
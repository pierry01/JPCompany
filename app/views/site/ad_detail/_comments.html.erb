<% @ad.comments.each do |comment| %>
  <div class="row">
    <div class="col-md-12">
      <%= comment.user.email %>
      
      <p id="time-ago" class="pull-right"><strong>
        <%= time_ago_in_words(comment.created_at) %>
      </strong></p>
      
      <p><%= comment.body %></p>
    </div>
  </div>
  <hr>
<% end %>

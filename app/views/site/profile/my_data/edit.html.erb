<%= content_for :javascripts do %>
  <%= javascript_include_tag 'site/profile/ads' %>
<% end %>

<h1><%= "#{t('messages.editing', model: @profile_user.model_name.human)}" %></h1><br><br>

<% if @profile_user.errors.any? %>
  <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
    <ul>
      <% @profile_user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@profile_user, url: site_profile_my_datum_path(@profile_user)) do |f| %>
  <div class="row">
    <div class="col-xs-5">
      <div class="form-group">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, class: 'form-control', placeholder: 'Nome' %>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="col-xs-5">
      <div class="form-group">
        <%= f.label :second_name %>
        <%= f.text_field :second_name, class: 'form-control', placeholder: 'Sobrenome' %>
      </div>
    </div>
  </div>

  
  <div class="row">
    <div class="col-xs-2">
      <div class="form-group">
        <%= f.label :birthdate %>
        <%= f.text_field :birthdate, class: 'form-control datepicker',
            value: (l(@profile_user.birthdate) unless @profile_user.birthdate.blank?) %>
      </div>
    </div>
  </div>

  <%= submit_tag 'Enviar', class: 'btn btn-default' %>
<% end %>
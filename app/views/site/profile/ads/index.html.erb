<h1>Meus anúncios</h1><br>

<div class="panel-body">
  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>#</th>
          <th>Imagem</th>
          <th>Título / Descrição</th>
          <th>Categoria</th>
          <th>Preço</th>
          <th>Ação</th>
        </tr>
      </thead>
      
      <tbody>
        <% @ads.each do |ad| %>
          <tr>
            <td style="vertical-align: middle">
              <%= ad.id %>
            </td>
            <td style="vertical-align: middle">
              <%= image_tag ad.picture(:thumb) %>
            </td>
            <td style="vertical-align: middle">
              <%= ad.title %><br><br>
              <%= ad.description.truncate(70) %>
            </td>
            <td style="vertical-align: middle">
              <%= ad.category.description %>
            </td>
            <td style="vertical-align: middle">
              <%= humanized_money_with_symbol ad.price %>
            </td>
            <td style="vertical-align: middle">
              <%= link_to edit_site_profile_ad_path(ad), class: 'btn btn-primary btn-circle' do %>
                <i class="fa fa-edit"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
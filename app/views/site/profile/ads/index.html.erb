<h1>Meus anúncios</h1>

<div class="panel panel-default">
  <div class="panel-heading">
      Listando Anúncios...
  </div>
  
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>#</th>
            <th>Imagem</th>
            <th>Descrição</th>
            <th>Preço</th>
          </tr>
        </thead>
        
        <tbody>
          <% @ads.each do |ad| %>
            <tr>
              <td><%= ad.id %></td>
              <td><%= image_tag ad.picture(:thumb) %></td>
              <td><%= ad.description %></td>
              <td><%= humanized_money_with_symbol ad.price %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

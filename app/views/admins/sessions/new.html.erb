<div class='container'>
  <div class='row'>
    <div class='col-md-4 col-md-offset-4'>
      <div class='login-panel panel panel-default'>
        <div class='panel-heading'>
            <h3 class='panel-title'><%= t('labels.identify_yourself') %></h3>
        </div>
        <div class='panel-body'>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class='form-group'>
              <%= f.email_field :email, placeholder: 'E-mail...', class: 'form-control' %>
            </div>
          
            <div class='form-group'>
              <%= f.password_field :password, class: 'form-control', placeholder: 'Senha...' %>
            </div>
          
            <% if devise_mapping.rememberable? %>
              <div class='checkbox'>
                <label>
                  <%= f.check_box :remember_me %>
                  <%= t('labels.remember_me') %>
                </label>
              </div>
            <% end %>
          
            <%= f.submit "#{t('labels.enter')}", class: 'btn btn-lg btn-success btn-block' %>
          <% end %>
          <br>
        </div>
      </div>
    </div>
  </div>
</div>